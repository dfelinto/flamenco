| {% macro task_list(task_count, tasks) -%}
.col_header.task-list-header
	| Tasks ({{ task_count }})

#task-list.col-list
	| {% for task in tasks %}
	//- NOTE: this is tightly linked to the JS in tasks.js, function task_add()
	a.col-list-item.task-list-item(
	class="status-{{ task.status }} task-link",
	href="#")
		span.status-indicator
		span.name {{ task.name }}
		span.type {{ task.status }} - {{ task.job_type | undertitle }}
	| {% endfor %}
| {%- endmacro %}
