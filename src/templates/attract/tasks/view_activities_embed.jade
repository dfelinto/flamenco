.d-activity
	| {% if activities['_meta']['total'] %}
	ul
		| {% for act in activities['_items'] %}
		li
			img.actor-avatar(src="{{ act['actor_user']['email'] | gravatar }}")
			span.date(title="{{ act._created }}") {{ act._created | pretty_date_time }}
			span.actor {{ act['actor_user']['full_name'] }}
			span.verb {{ act.verb }}
		| {% endfor %}
	| {% endif %}
